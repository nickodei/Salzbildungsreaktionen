<Page
    x:Class="Formelkreator_Salzbildungsreaktionen.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <NavigationView x:Name="NavigationViewControl" PaneDisplayMode="Top" ItemInvoked="NavigationViewControl_ItemInvoked">
            <NavigationView.MenuItems>
                <NavigationViewItem FontSize="18" Content="Metall + Säure" x:Name="metallSaeureNavigation" />
                <NavigationViewItem FontSize="18" Content="Metalloxid + Säure" x:Name="metalloxdiSaeureNavigation" />
                <NavigationViewItem FontSize="18" Content="Säure + Lauge" x:Name="saeureLaugeNavigation" />
            </NavigationView.MenuItems>
            <Frame x:Name="contentFrame"/>
        </NavigationView>
    </Grid>
</Page>
